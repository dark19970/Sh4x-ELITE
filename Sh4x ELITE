-- [CONFIGURAÃ‡ÃƒO DISCORD]
local WEBHOOK_URL = "https://discord.com/api/webhooks/1465809966983155857/YHUdyCOZgu3mymCizFY5coTioKx2UjoR9puFeotVWQHrq3mGgFkZhQt1LrBLx20aLXCd"
local SCRIPT_NAME = "Sh4x ULTRA SPEED"
